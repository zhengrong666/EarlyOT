CAPI=2:
name: "lowrisc:ip:pcr:1.0"
description: "Platform Configuration Register (PCR)"

filesets:
  files_rtl:
    depend:
      - lowrisc:prim:all
      - lowrisc:prim:util
      - lowrisc:ip:tlul
    files:
      - rtl/pcr_reg_pkg.sv
      - rtl/pcr_reg_top.sv
      - rtl/pcr_core.sv
      - rtl/pcr.sv
    file_type: systemVerilogSource

  files_verilator_waiver:
    depend:
      # common waivers
      - lowrisc:lint:common
      - lowrisc:lint:comportable
    files:
      - lint/pcr.vlt
    file_type: vlt

  files_ascentlint_waiver:
    depend:
      # common waivers
      - lowrisc:lint:common
      - lowrisc:lint:comportable
    files:
      - lint/pcr.waiver
    file_type: waiver

  files_veriblelint_waiver:
    depend:
      # common waivers
      - lowrisc:lint:common
      - lowrisc:lint:comportable

#  No DV yet in this PR
#
#  files_formal:
#    files:
#      - dv/tb/pcr_bind.sv
#    file_type: systemVerilogSource

parameters:
  SYNTHESIS:
    datatype: bool
    paramtype: vlogdefine


targets:
  default: &default_target
    filesets:
      - tool_verilator   ? (files_verilator_waiver)
      - tool_ascentlint  ? (files_ascentlint_waiver)
      - tool_veriblelint ? (files_veriblelint_waiver)
#     files_formal yet undefined
#     - target_formal    ? (files_formal)
      - files_rtl
    toplevel: pcr

#  files_formal yet undefined
#
#  formal:
#    filesets:
#      - files_rtl
#      - files_formal
#    toplevel: pcr

  lint:
    <<: *default_target
    default_tool: verilator
    parameters:
      - SYNTHESIS=true
    tools:
      verilator:
        mode: lint-only
        verilator_options:
          - "-Wall"

  syn:
    <<: *default_target
    # TODO: set default to DC once
    # this option is available
    # olofk/edalize#89
    default_tool: icarus
    parameters:
      - SYNTHESIS=true
